<div class='row'>
  
  <br>
  <h2>SMASH BOYS ALL PLAYERS</h2>
  <br>

  <div class='large-2 columns'>
    <%= search_form_for @search do |f| %>
      <div class='field'>
        <%= f.label :first_name_cont, "First Name Contains" %>
        <%= f.text_field :first_name_cont %>
      </div>
      <div class='field'>
        <%= f.label :last_name_cont, "Last Name Contains" %>
        <%= f.text_field :last_name_cont %>
      </div>
      <div class='field'><%= f.button "Submit" %></div>
    <% end %>
  </div>

  <div class='large-10 columns'>
    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th><%= sort_link @search, :dob, "Date of Birth" %></th>
        <th><%= sort_link @search, :current_grade, "Current Grade" %></th>
        <th><%= sort_link @search, :height_inches, "Height in Inches" %></th>
        <th><%= sort_link @search, :height, 'Height in Feet' %></th>
        <th><%= sort_link @search, :dominant_hand, "Dominant Hand"%></th>
        <th><%= sort_link @search, :school, "School" %></th>
      </tr>
      <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.dob %></td>
        <td><%= player.current_grade %></td>
        <td><%= player.height_inches %></td>
        <td><%= player.height %></td>
        <td><%= player.dominant_hand %></td>
        <td><%= player.school %></td>
        <td><%= link_to "edit", player_path(player)%></td>
      </tr>
      <% end %>
    </table>
  </div>

</div>
